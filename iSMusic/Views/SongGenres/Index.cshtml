@using iSMusic.Controllers
@model IEnumerable<iSMusic.Models.EFModels.SongGenre>

@{
    ViewBag.Title = "Index";

    var pagedInfo = (SongGenresController.PaginationInfo)ViewBag.Pagination;
    var pageSizeList = (IEnumerable<SelectListItem>)ViewBag.PageSizeList;
    var genreName = ViewBag.GenreName as string;
}

<h2>歌曲種類</h2>

@*<input type="text" name="genreName" id="genreName" class="form-control" value="@genreName" />*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.genreName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.genreName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id })
            </td>
        </tr>
    }

</table>
@pagedInfo.RenderPager(page => "/SongGenres/Index?PageNumber=" + page)